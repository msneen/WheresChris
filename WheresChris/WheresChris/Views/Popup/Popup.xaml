<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheresChris.Views.Popup.Popup"
             Padding="20">
    <ListView x:Name="MyListView" VerticalOptions="Center" HorizontalOptions="Center" RowHeight="150"
            ItemsSource="{Binding Items}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement"
            BackgroundColor="Transparent">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout VerticalOptions="FillAndExpand" Padding="5">
                        <Frame Style="{DynamicResource frameLayoutStyle}" VerticalOptions="FillAndExpand">
                            <Label Text="{Binding Text}" VerticalOptions="FillAndExpand"
                           Style="{DynamicResource popupLabelBannerStyle}" />
                        </Frame>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
